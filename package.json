  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "create-react-app": "^2.1.8",
    "express": "^4.16.4",
    "mongoose": "^5.4.20",
    "nodemon": "^1.18.10"
  }
}
