{
  "name": "mern_shopping_list",
  "version": "1.0.0",
  "description": "Shopping list built with new MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
